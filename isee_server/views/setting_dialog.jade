.modal-dialog(role="document")
  .modal-content
    .modal-header
      div(class="modal-title") 
        button(type="button", class="close", data-dismiss="modal", aria-label="Close") 
          span(aria-hidden="true") &times
        h4.modal-title-text Settings
    .modal-body
      b Size:
      br
      .btn-group(data-toggle="buttons")
        label(class="btn btn-default", id="full-size")
          input(type="radio", name="image-size", id="full-size", value="full-size", autocomplete="off") 
          span Full Size
        label(class="btn btn-default", id="large")
          input(type="radio", name="image-size", id="large", value="large", autocomplete="off") 
          span Large
        label(class="btn btn-default", id="medium")
          input(type="radio", name="image-size", id="medium", value="medium", autocomplete="off") 
          span Medium
        label(class="btn btn-default", id="small")
          input(type="radio", name="image-size", id="small", value="small", autocomplete="off") 
          span Small
      br
      br
      b Layout:
      br
      .btn-group(data-toggle="buttons")
        label(class="btn btn-default", id="matrix")
          input(type="radio", name="layout", id="matrix", value="matrix", autocomplete="off") 
          span Matrix
        label(class="btn btn-default", id="film-stripe")
          input(type="radio", name="layout", id="film-stripe", value="matrix", autocomplete="off") 
          span Film-stripe
      br
      br
      b Comment:
      br
      .btn-group(data-toggle="buttons")
        label(class="btn btn-default", id="on")
          input(type="radio", name="comment", id="on", value="on", autocomplete="off") 
          span On
        label(class="btn btn-default", id="off")
          input(type="radio", name="comment", id="off", value="off", autocomplete="off") 
          span Off
    .modal-footer
      button(type="button", class="btn btn-default", data-dismiss="modal") Close