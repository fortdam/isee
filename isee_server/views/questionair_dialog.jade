.modal-dialog(role="document")
  .modal-content
    .modal-header
      div(class="modal-title", id="myModalLabel") 
        button(type="button", class="close", data-dismiss="modal", aria-label="Close") 
          span(aria-hidden="true") &times
        h4.modal-title-text Rate this photo 
    form(action="/questionair", method="post", id="dddd")
      .modal-body
        b Rate: from 1(worst) to 10(best)
        br
        .btn-group(data-toggle="buttons", id="score-group")
