extends layout

block content
  #dl-comments(class="hidden") #{account}
  div(class='form col-xs-12 col-sm-6 col-md-6 col-lg-6 col-centered')
    h3 Login ISEE
    form(class='form', method='post', action='/login')
      .form-group
        label(for='acct') Account
          input.form-control(type='text', id='acct', name='acct')
      .form-group
        label(for='mail') Email
          input.form-control(type='text', id='mail', name='mail')
      .form-group
        button(type='submit', class='btn btn-primary btn-signup') Log in